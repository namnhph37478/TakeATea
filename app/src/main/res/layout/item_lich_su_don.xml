<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:layout_marginBottom="6dp"
    android:elevation="2dp">

    <!-- Ảnh minh họa khách hàng (chỉ để trang trí, không cần lấy từ DB) -->
    <ImageView
        android:id="@+id/imgKhachHang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        android:contentDescription="@string/img_khach_hang"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp" />

    <!-- Thông tin đơn hàng -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenKhachHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvDonGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn giá: 50,000đ"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/tvSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 2"
            android:textSize="14sp"
            android:textColor="#555555" />

    </LinearLayout>

</LinearLayout>
