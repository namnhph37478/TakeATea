<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_tea_logo" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:text="Trà Sữa Truyền Thống"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Giá: 25.000đ"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductPrice"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="SL: 15"
            android:textSize="14sp" />

        <!-- Nút sửa -->
        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Sửa" />

        <!-- Nút xoá -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_below="@id/btnEdit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Xoá" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
