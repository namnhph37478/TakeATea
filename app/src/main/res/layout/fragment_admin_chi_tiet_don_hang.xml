<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Thanh tiêu đề + nút back -->
    <LinearLayout
        android:id="@+id/barTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chi tiết đơn hàng"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <!-- Thông tin chung đơn hàng -->
    <LinearLayout
        android:id="@+id/boxInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/barTop"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp"
        android:layout_margin="12dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvOrderCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn: #12345"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khách: Nguyễn Văn A"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày: 08/08/2025"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Danh sách món trong đơn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/boxInfo"
        android:layout_above="@id/boxTotal"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:paddingBottom="8dp" />

    <!-- Tổng tiền -->
    <LinearLayout
        android:id="@+id/boxTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="12dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/tvTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng cộng: "
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 ₫"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>

</RelativeLayout>
