<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center"
            android:background="#FFEB3B"
            android:text="@string/user_account_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Nút chỉnh sửa thông tin -->
        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="@string/edit_info"/>

        <!-- Họ tên -->
        <TextView
            android:text="@string/full_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtAdminName"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_height="wrap_content" />

        <!-- Email -->
        <TextView
            android:text="@string/email"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtAdminEmail"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_height="wrap_content" />

        <!-- Số điện thoại -->
        <TextView
            android:text="@string/phone"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtAdminPhone"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Địa chỉ -->
        <TextView
            android:text="@string/address"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtAdminAddress"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_height="wrap_content" />

        <!-- Button: Đăng xuất -->
        <Button
            android:id="@+id/btnLogout"
            android:text="@string/logout"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_user_bottom"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@null"
            app:itemTextColor="@color/black"
            android:background="@android:color/white" />
    </LinearLayout>
</ScrollView>
