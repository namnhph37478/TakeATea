        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TakeATea">

        <activity android:name=".activity.LoginActivity"
            android:exported="false"/>
        <activity android:name=".activity.RegisterActivity"
            android:exported="false"/>
        <activity android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainUserActivity"
            android:exported="false"/>
        <activity android:name=".activity.UserProductDetailActivity"
            android:exported="false"/>

        <activity android:name=".activity.OrderDetailActivity"
            android:exported="false"/>

        <activity android:name=".activity.MainAdminActivity"
            android:exported="false"/>
        <activity android:name=".activity.ThemMonActivity"
            android:exported="false"/>
        <activity android:name=".activity.ThemKhuyenMaiActivity"
            android:exported="false"/>
        <activity android:name=".fragment.Admin.ChiTietKhachHangActivity"
            android:exported="false"/>
